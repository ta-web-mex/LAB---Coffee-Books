  
<h1>Add place:</h1>
<div id='map' style='width: 100%; height: 450px;'></div>

<form action="/places/new" method="post">
  <label for="name">Name: <br>
    <input type="text" name="name" id="name">
  </label>
  <br>
  <label for="placeType">Place Type: <br>
    <input type="text" name="placeType" id="placeType">
  </label>
  <br>
  <input type="text" name="lng" id="lng" hidden>
  <input type="text" name="lat" id="lat" hidden>
  <button type="submit">
    Add Place
  </button>
</form>

<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.min.js"></script>
<link rel="stylesheet"
  href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.css" type="text/css" />
